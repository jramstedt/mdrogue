{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "m68k build",
            "command": "${workspaceRoot}/asm68k",
            "args": ["/p /q /o e-,l@", "main.asm,${workspaceRootFolderName}.bin,${workspaceRootFolderName}.sym,${workspaceRootFolderName}.lst"],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "external",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*)\\(([0-9]*)\\)() : (.*) : (.*)",
                    "file": 1,
                    "line": 2,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}