{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "${workspaceRoot}/asm68k",
            "args": ["/p /q /o e-,l@", "main.asm,${workspaceRootFolderName}.bin"],
            "isShellCommand": true,
            "showOutput": "silent",
            "isBuildCommand": true,
            "problemMatcher": {
                "owner": "external",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*)\\(([0-9]*)\\)() : (.*) : (.*)",
                    "file": 1,
                    "line": 2,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}